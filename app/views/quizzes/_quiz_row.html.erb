<tr>
  <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900"><%= quiz.id %></td>
  <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= quiz.title %></td>
  <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= quiz.description.truncate(30) %></td>
  <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= format_date(quiz.created_at) %></td>

  <% if user_signed_in? %>
    <% if quiz.user == current_user %>
      <td class="whitespace-nowrap px-4 py-2 text-gray-700">
        <%= link_to "Edit", edit_quiz_path(quiz), class: 'inline-block rounded border border-brown-600 px-4 py-1 text-sm font-medium text-brown-600 hover:bg-brown-600 hover:text-white focus:outline-none focus:ring active:bg-brown-500' %>
      </td>
    <% end %>
  <% end %>

  <td class="whitespace-nowrap px-4 py-2 text-gray-700">
    <%= link_to "Start Quiz", start_quiz_path(quiz), class: 'inline-block rounded border border-brown-600 px-4 py-1 text-sm font-medium text-brown-600 hover:bg-brown-600 hover:text-white focus:outline-none focus:ring active:bg-brown-500' %>
  </td>
</tr>