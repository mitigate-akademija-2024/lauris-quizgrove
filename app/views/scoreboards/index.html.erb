<!-- app/views/scoreboards/index.html.erb -->

<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg mt-8">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 text-center">Top 10 Scoreboard</h1>

  <div class="mb-4 text-center">
    <%= link_to 'Export as CSV', export_scoreboard_path(format: :csv), class: 'inline-block px-4 py-2 bg-brown-500 text-white font-semibold rounded-lg shadow-md hover:bg-brown-600' %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg">
      <thead class="bg-gray-100 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Score</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @scores.each_with_index do |score, index| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= index + 1 %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= score.username %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= score.total_score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Back to Dashboard Button -->
  <div class="mt-8 text-center">
    <%= link_to 'Back To QuizGrove', dashboard_path, class: 'inline-block px-4 py-2 bg-brown-500 text-white font-semibold rounded-lg shadow-md hover:bg-brown-600' %>
  </div>
</div>


