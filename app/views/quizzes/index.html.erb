<h1><%= @title %></h1>

<div id="quizzes">
  <% @quizzes.each do |quiz| %>
    <%= render quiz %>
    <span class="inline-flex -space-x-px overflow-hidden rounded-md border bg-white shadow-sm">
      <%= link_to edit_quiz_path(quiz), class: "inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative" do %>
        Edit
      <% end %>
      <%= link_to quiz_path(quiz), class: "inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative" do %>
        View
      <% end %>
      <%= link_to quiz_path(quiz), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative" do %>
        Delete
      <% end %>
    </span>
  <% end %>
</div>

<p class="mt-4">
  <span class="inline-flex -space-x-px overflow-hidden rounded-md border bg-white shadow-sm">
    <%= link_to new_quiz_path, class: "inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative" do %>
      New quiz
    <% end %>
  </span>
</p>

<p><%= @description %></p>

  