<!DOCTYPE html>
<html>
<head>
  <title>QuizGrove</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
</head>
<body class="bg-gray-100">
  <nav class="bg-green-600 p-4">
    <div class="container mx-auto flex justify-between items-center">
      <div class="text-white text-2xl font-bold">
        <%= link_to "QuizGrove", root_path, class: "hover:underline" %>
      </div>
      <div>
        <%= link_to "Create Quiz", new_quiz_path, class: "text-white hover:bg-brown-700 px-4 py-2 rounded" %>
        <%= link_to "Show Quizzes", quizzes_path, class: "text-white hover:bg-brown-700 px-4 py-2 rounded" %>

        <% if user_signed_in? %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-white hover:bg-brown-700 px-4 py-2 rounded" %>
          <%= link_to "Profile", edit_user_registration_path, class: "text-white hover:bg-brown-700 px-4 py-2 rounded" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "text-white hover:bg-brown-700 px-4 py-2 rounded" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "text-white hover:bg-brown-700 px-4 py-2 rounded" %>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="container mx-auto p-4">
    <%= yield %>
  </div>
</body>
</html>